<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="3dp"
        android:paddingTop="10dp"
        android:layout_gravity="center"
        android:paddingBottom="10dp"
        android:gravity="center"
        android:id="@+id/other_income_item"
        android:background="@drawable/round_corner2"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:id="@+id/other_income_source"
            android:text="Panir Motor"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/other_monthly_income"
            android:text="10pcs"
            />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:id="@+id/other_income_delete_item"
            android:src="@drawable/ic_close_black_24dp"
            />
    </LinearLayout>

</LinearLayout>