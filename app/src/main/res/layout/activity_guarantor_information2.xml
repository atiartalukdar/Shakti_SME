<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_margin="20dp"
    android:gravity="center|top"
    android:orientation="vertical"
    tools:context=".loanInformation.common.LoanGuarantorInfoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Full Name"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/memberID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Member ID: 0000"
                android:textSize="16sp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="50dp"
                android:background="@color/lineColor" />

            <TextView
                android:id="@+id/topText1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/biz_info_guarantor_information"
                android:textSize="30sp" />

             <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:text="@string/biz_info_guarantor_information"
                android:textSize="20sp" />


            <!--Name-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/name_tv"
                android:text="@string/name" />
            <EditText
                android:id="@+id/ed_guarantor1_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/newLeadMarginBottom"
                android:background="@drawable/round_corner"
                android:hint="@string/editTextHint"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:inputType="text"
                android:textSize="@dimen/newLeadEditTextSize" />

            <!-- National ID-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/father_name_tv"
                android:text="@string/nid_number" />
            <EditText
                android:id="@+id/ed_guarantor1_nid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/newLeadMarginBottom"
                android:background="@drawable/round_corner"
                android:hint="@string/editTextHint"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:maxLength="17"
                android:inputType="number"
                android:textSize="@dimen/newLeadEditTextSize" />

            <!--ocupation -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/occupation_tv"
                android:text="@string/ocupation" />
            <EditText
                android:id="@+id/ed_guarantor1_occupation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/newLeadMarginBottom"
                android:background="@drawable/round_corner"
                android:hint="@string/editTextHint"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:inputType="text"
                android:paddingBottom="10dp"
                android:textSize="@dimen/newLeadEditTextSize" />


            <!--parmanent address -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/relation_tv"
                android:text="@string/parmanent_address" />
            <EditText
                android:id="@+id/ed_guarantor1_parmanent_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/newLeadMarginBottom"
                android:background="@drawable/round_corner"
                android:hint="@string/editTextHint"
                android:paddingLeft="20dp"
                android:inputType="textMultiLine"
                android:maxLines="3"
                android:lines="2"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textSize="@dimen/newLeadEditTextSize" />


            <!--Business name and address -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/biz_address" />
            <EditText
                android:id="@+id/ed_guarantor1_business_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/newLeadMarginBottom"
                android:background="@drawable/round_corner"
                android:hint="@string/editTextHint"
                android:paddingLeft="20dp"
                android:inputType="textMultiLine"
                android:maxLines="3"
                android:lines="2"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textSize="@dimen/newLeadEditTextSize" />

            <!--Bank name-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/guarantor_bank_name" />
            <EditText
                android:id="@+id/ed_guarantor1_bank_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/newLeadMarginBottom"
                android:background="@drawable/round_corner"
                android:hint="@string/editTextHint"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:inputType="text"
                android:paddingBottom="10dp"
                android:textSize="@dimen/newLeadEditTextSize" />

            <!--Bank account number-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/guarantor_bank_account_no" />
            <EditText
                android:id="@+id/ed_guarantor1_bank_account_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/newLeadMarginBottom"
                android:background="@drawable/round_corner"
                android:hint="@string/editTextHint"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:inputType="number"
                android:paddingBottom="10dp"
                android:textSize="@dimen/newLeadEditTextSize" />

            <!--Monthly Income-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/guarantor_monthly_income" />
            <EditText
                android:id="@+id/ed_guarantor1_monthly_income"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/newLeadMarginBottom"
                android:background="@drawable/round_corner"
                android:hint="@string/editTextHint"
                android:paddingLeft="20dp"
                android:inputType="number"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textSize="@dimen/newLeadEditTextSize"
                android:maxLength="6"/>


            <!--Mobile No-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/mobile_number_0" />
            <EditText
                android:id="@+id/ed_guarantor1_mobile_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/newLeadMarginBottom"
                android:background="@drawable/round_corner"
                android:hint="@string/editTextHint"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:inputType="number"
                android:maxLength="11"
                android:paddingBottom="10dp"
                android:textSize="@dimen/newLeadEditTextSize" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="50dp"
                android:background="@color/lineColor" />
            <TextView
                android:id="@+id/topText2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:text="@string/guarantor_2"
                android:textSize="20sp" />


            <!--Name-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/name" />
            <EditText
                android:id="@+id/ed_guarantor2_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/newLeadMarginBottom"
                android:background="@drawable/round_corner"
                android:hint="@string/editTextHint"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:inputType="text"
                android:paddingBottom="10dp"
                android:textSize="@dimen/newLeadEditTextSize" />

            <!-- National ID-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/nid_number" />
            <EditText
                android:id="@+id/ed_guarantor2_nid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/newLeadMarginBottom"
                android:background="@drawable/round_corner"
                android:hint="@string/editTextHint"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textSize="@dimen/newLeadEditTextSize"
                android:maxLength="17"
                android:inputType="number"/>

            <!--ocupation -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ocupation" />
            <EditText
                android:id="@+id/ed_guarantor2_occupation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/newLeadMarginBottom"
                android:background="@drawable/round_corner"
                android:hint="@string/editTextHint"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:inputType="text"
                android:paddingBottom="10dp"
                android:textSize="@dimen/newLeadEditTextSize" />


            <!--parmanent address -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/parmanent_address" />
            <EditText
                android:id="@+id/ed_guarantor2_parmanent_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/newLeadMarginBottom"
                android:background="@drawable/round_corner"
                android:hint="@string/editTextHint"
                android:paddingLeft="20dp"
                android:inputType="textMultiLine"
                android:maxLines="3"
                android:lines="2"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textSize="@dimen/newLeadEditTextSize" />


            <!--Business name and address -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/biz_address" />
            <EditText
                android:id="@+id/ed_guarantor2_business_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/newLeadMarginBottom"
                android:background="@drawable/round_corner"
                android:hint="@string/editTextHint"
                android:paddingLeft="20dp"
                android:inputType="textMultiLine"
                android:maxLines="3"
                android:lines="2"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textSize="@dimen/newLeadEditTextSize" />

            <!--Bank name-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/guarantor_bank_name" />
            <EditText
                android:id="@+id/ed_guarantor2_bank_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/newLeadMarginBottom"
                android:background="@drawable/round_corner"
                android:hint="@string/editTextHint"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:inputType="text"
                android:textSize="@dimen/newLeadEditTextSize" />

            <!--Bank account number-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/guarantor_bank_account_no" />
            <EditText
                android:id="@+id/ed_guarantor2_bank_account_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/newLeadMarginBottom"
                android:background="@drawable/round_corner"
                android:hint="@string/editTextHint"
                android:paddingLeft="20dp"
                android:inputType="number"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textSize="@dimen/newLeadEditTextSize" />

            <!--Monthly Income-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/guarantor_monthly_income" />
            <EditText
                android:id="@+id/ed_guarantor2_monthly_income"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/newLeadMarginBottom"
                android:background="@drawable/round_corner"
                android:hint="@string/editTextHint"
                android:paddingLeft="20dp"
                android:inputType="number"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textSize="@dimen/newLeadEditTextSize"
                android:maxLength="6"/>


            <!--Mobile No-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/mobile_number_0" />
            <EditText
                android:id="@+id/ed_guarantor2_mobile_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/newLeadMarginBottom"
                android:background="@drawable/round_corner"
                android:hint="@string/editTextHint"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:inputType="number"
                android:paddingBottom="10dp"
                android:textSize="@dimen/newLeadEditTextSize"
                android:maxLength="11"/>


        </LinearLayout>

        <Button
            android:id="@+id/saveBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="20dp"
            android:background="@drawable/round_corner"
            android:gravity="center"
            android:onClick="saveBtn"
            android:text="Save"
            android:textSize="20sp" />
    </LinearLayout>



</ScrollView>